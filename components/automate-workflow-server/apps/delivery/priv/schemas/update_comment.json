{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "title": "Update comment",
  "description": "What a comment update request should look like",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1,
      "required": true
    },
    "status": {
      "type": "string",
      "enum": ["draft", "published"],
      "default": "draft"
    },
    "content": {
      "type": "string"
    }
  }
}
